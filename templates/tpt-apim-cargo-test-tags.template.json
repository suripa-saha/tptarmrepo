{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "ApimServiceName": {
      "type": "string"
    },
    "PolicyXMLBaseUrl": {
      "type": "string"
    }
  },
  "resources": [
    {
      "properties": {
        "displayName": "Customer Support"
      },
      "name": "[concat(parameters('ApimServiceName'), '/Customer-Support')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2021-01-01-preview"
    },
    {
      "properties": {
        "displayName": "HomePage"
      },
      "name": "[concat(parameters('ApimServiceName'), '/HomePage')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2021-01-01-preview"
    },
    {
      "properties": {
        "displayName": "Registration"
      },
      "name": "[concat(parameters('ApimServiceName'), '/Registration')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2021-01-01-preview"
    },
    {
      "properties": {
        "displayName": "Reset Password"
      },
      "name": "[concat(parameters('ApimServiceName'), '/Reset-Password')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2021-01-01-preview"
    },
    {
      "properties": {
        "displayName": "Subscription"
      },
      "name": "[concat(parameters('ApimServiceName'), '/Subscription')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2021-01-01-preview"
    },
    {
      "properties": {
        "displayName": "Terms & Conditions"
      },
      "name": "[concat(parameters('ApimServiceName'), '/Terms-Conditions')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2021-01-01-preview"
    },
    {
      "properties": {
        "displayName": "User Profile"
      },
      "name": "[concat(parameters('ApimServiceName'), '/User-Profile')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2021-01-01-preview"
    },
    {
      "properties": {
        "displayName": "User Roles"
      },
      "name": "[concat(parameters('ApimServiceName'), '/User-Roles')]",
      "type": "Microsoft.ApiManagement/service/tags",
      "apiVersion": "2021-01-01-preview"
    }
  ]
}